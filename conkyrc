
conky.config = {
    use_xft = true,
    font = "DejaVu Sans:bold:size=9",
    xftalpha = 1,
    text_buffer_size = 2048,
    lua_load = "$HOME/.weather/conky-draw_bg.lua",
    lua_draw_hook_pre = "conky_draw_bg",
    update_interval = 1.5,
    total_run_times = 0,

    own_window = true,
    own_window_transparent = false,
    -- own_window_type override,
    -- own_window_type dock,
    -- own_window_type desktop,
    own_window_type = override,
    border_inner_margin = 10,

    own_window_argb_visual = true,
    own_window_argb_value = 130,

    -- If own_window is yes, these window manager hints may be used
    own_window_hints = "undecorated,below,sticky,skip_taskbar,skip_pager",

    -- Use double buffering (reduces flicker, may not work for everyone)
    double_buffer = true,

    -- Minimum size of text area
    maximum_width = 200,

    -- Draw shades?
    draw_shades = yes,

    -- Draw outlines?
    draw_outline = no,

    -- Draw borders around text
    draw_borders = no,

    stippled_borders = 0,

    border_width = 1,

    default_color = "bbbbcc",
    -- default_shade_color black,
    -- default_outline_color grey,
    own_window_colour = "101010",

    -- alignment top_left
    -- alignment top_right
    -- alignment bottom_left
    alignment = "bottom_right",

    gap_x = 0,
    gap_y = 60,

    -- Subtract file system buffers from used memory?
    no_buffers = yes,

    -- set to yes if you want all text to be in uppercase
    uppercase = no,

    cpu_avg_samples = 5,
    net_avg_samples = 2,

    override_utf8_locale = yes,

    -- Add spaces to keep things from moving about? This only affects certain objects.
    use_spacer = none,

    temperature_unit = celsius,
    -- the filename with the weather info
    template0 = "$HOME/.weather/weather",
    mpd_host = "127.0.0.1",
    mpd_port = 6600
}

